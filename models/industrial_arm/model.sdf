<?xml version="1.0"?>
<sdf version="1.9">
  <model name="arm_1">
    <static>true</static>
    <pose>0.6 0 0 0 0 0</pose>

    <!-- ========= pedestal / base ========= -->
    <link name="pedestal">
      <inertial>
        <mass>30.0</mass>
        <inertia>
          <ixx>2.0</ixx><iyy>2.0</iyy><izz>2.0</izz>
        </inertia>
      </inertial>

      <collision name="col">
        <geometry>
          <cylinder>
            <radius>0.12</radius>
            <length>0.35</length>
          </cylinder>
        </geometry>
      </collision>

      <visual name="vis">
        <geometry>
          <cylinder>
            <radius>0.12</radius>
            <length>0.35</length>
          </cylinder>
        </geometry>
      </visual>
    </link>

    <!-- ========= link1 (shoulder) ========= -->
    <link name="link1">
      <pose>0 0 0.22 0 0 0</pose>
      <inertial>
        <mass>5.0</mass>
        <inertia>
          <ixx>0.1</ixx><iyy>0.1</iyy><izz>0.1</izz>
        </inertia>
      </inertial>
      <collision name="col">
        <geometry>
          <cylinder>
            <radius>0.06</radius>
            <length>0.25</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="vis">
        <geometry>
          <cylinder>
            <radius>0.06</radius>
            <length>0.25</length>
          </cylinder>
        </geometry>
      </visual>
    </link>

    <!-- ========= link2 (upper arm) ========= -->
    <link name="link2">
      <pose>0.18 0 0.34 0 0 0</pose>
      <inertial>
        <mass>4.0</mass>
        <inertia>
          <ixx>0.08</ixx><iyy>0.08</iyy><izz>0.08</izz>
        </inertia>
      </inertial>

      <collision name="col">
        <geometry>
          <box><size>0.35 0.08 0.08</size></box>
        </geometry>
      </collision>

      <visual name="vis">
        <geometry>
          <box><size>0.35 0.08 0.08</size></box>
        </geometry>
      </visual>
    </link>

    <!-- ========= link3 (forearm) ========= -->
    <link name="link3">
      <pose>0.45 0 0.34 0 0 0</pose>
      <inertial>
        <mass>3.0</mass>
        <inertia>
          <ixx>0.05</ixx><iyy>0.05</iyy><izz>0.05</izz>
        </inertia>
      </inertial>

      <collision name="col">
        <geometry>
          <box><size>0.28 0.07 0.07</size></box>
        </geometry>
      </collision>

      <visual name="vis">
        <geometry>
          <box><size>0.28 0.07 0.07</size></box>
        </geometry>
      </visual>
    </link>

    <!-- ========= wrist ========= -->
    <link name="wrist">
      <pose>0.60 0 0.34 0 0 0</pose>
      <inertial>
        <mass>1.5</mass>
        <inertia>
          <ixx>0.02</ixx><iyy>0.02</iyy><izz>0.02</izz>
        </inertia>
      </inertial>

      <collision name="col">
        <geometry>
          <sphere><radius>0.05</radius></sphere>
        </geometry>
      </collision>

      <visual name="vis">
        <geometry>
          <sphere><radius>0.05</radius></sphere>
        </geometry>
      </visual>
    </link>

    <!-- ========= gripper (simple) ========= -->
    <link name="gripper">
      <pose>0.68 0 0.34 0 0 0</pose>
      <inertial>
        <mass>1.0</mass>
        <inertia>
          <ixx>0.01</ixx><iyy>0.01</iyy><izz>0.01</izz>
        </inertia>
      </inertial>

      <collision name="col">
        <geometry>
          <box><size>0.10 0.06 0.04</size></box>
        </geometry>
      </collision>

      <visual name="vis">
        <geometry>
          <box><size>0.10 0.06 0.04</size></box>
        </geometry>
      </visual>
    </link>

    <!-- ========= joints ========= -->
    <!-- base yaw -->
    <joint name="j1_base_yaw" type="revolute">
      <parent>pedestal</parent>
      <child>link1</child>
      <pose>0 0 0.18 0 0 0</pose>
      <axis>
        <xyz>0 0 1</xyz>
        <limit><lower>-3.14</lower><upper>3.14</upper></limit>
      </axis>
    </joint>

    <!-- shoulder pitch -->
    <joint name="j2_shoulder" type="revolute">
      <parent>link1</parent>
      <child>link2</child>
      <pose>0 0 0.34 0 0 0</pose>
      <axis>
        <xyz>0 1 0</xyz>
        <limit><lower>-1.57</lower><upper>1.57</upper></limit>
      </axis>
    </joint>

    <!-- elbow pitch -->
    <joint name="j3_elbow" type="revolute">
      <parent>link2</parent>
      <child>link3</child>
      <pose>0.35 0 0.34 0 0 0</pose>
      <axis>
        <xyz>0 1 0</xyz>
        <limit><lower>-2.2</lower><upper>2.2</upper></limit>
      </axis>
    </joint>

    <!-- wrist pitch -->
    <joint name="j4_wrist" type="revolute">
      <parent>link3</parent>
      <child>wrist</child>
      <pose>0.28 0 0 0 0 0</pose>
      <axis>
        <xyz>0 1 0</xyz>
        <limit><lower>-2.2</lower><upper>2.2</upper></limit>
      </axis>
    </joint>

    <!-- gripper (simple open/close as prismatic) -->
    <joint name="j5_gripper" type="prismatic">
      <parent>wrist</parent>
      <child>gripper</child>
      <axis>
        <xyz>1 0 0</xyz>
        <limit><lower>0</lower><upper>0.08</upper></limit>
      </axis>
    </joint>

  </model>
</sdf>
