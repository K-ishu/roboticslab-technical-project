<?xml version="1.0"?>
<sdf version="1.9">
  <model name="simple_arm">
    <static>true</static>
    <pose>-1 0 0 0 0 0</pose>

    <!-- Base -->
    <link name="base">
      <collision name="col">
        <geometry><cylinder><radius>0.1</radius><length>0.2</length></cylinder></geometry>
      </collision>
      <visual name="vis">
        <geometry><cylinder><radius>0.1</radius><length>0.2</length></cylinder></geometry>
        <material>
          <ambient>0.8 0.8 0.1 1</ambient>
          <diffuse>0.8 0.8 0.1 1</diffuse>
        </material>
      </visual>
    </link>

    <!-- Link1 -->
    <link name="link1">
      <pose>0 0 0.2 0 0 0</pose>
      <collision name="col">
        <geometry><box><size>0.05 0.05 0.4</size></box></geometry>
      </collision>
      <visual name="vis">
        <geometry><box><size>0.05 0.05 0.4</size></box></geometry>
        <material>
          <ambient>0.9 0.6 0.2 1</ambient>
          <diffuse>0.9 0.6 0.2 1</diffuse>
        </material>
      </visual>
    </link>

    <!-- Link2 -->
    <link name="link2">
      <pose>0 0 0.6 0 0 0</pose>
      <collision name="col">
        <geometry><box><size>0.05 0.05 0.35</size></box></geometry>
      </collision>
      <visual name="vis">
        <geometry><box><size>0.05 0.05 0.35</size></box></geometry>
        <material>
          <ambient>0.2 0.6 0.9 1</ambient>
          <diffuse>0.2 0.6 0.9 1</diffuse>
        </material>
      </visual>
    </link>

    <!-- Link3 (end) -->
    <link name="link3">
      <pose>0 0 0.95 0 0 0</pose>
      <collision name="col">
        <geometry><box><size>0.05 0.05 0.2</size></box></geometry>
      </collision>
      <visual name="vis">
        <geometry><box><size>0.05 0.05 0.2</size></box></geometry>
        <material>
          <ambient>0.7 0.2 0.8 1</ambient>
          <diffuse>0.7 0.2 0.8 1</diffuse>
        </material>
      </visual>
    </link>

    <!-- Joints -->
    <joint name="joint1" type="revolute">
      <parent>base</parent>
      <child>link1</child>
      <axis><xyz>0 0 1</xyz></axis>
    </joint>

    <joint name="joint2" type="revolute">
      <parent>link1</parent>
      <child>link2</child>
      <axis><xyz>0 1 0</xyz></axis>
    </joint>

    <joint name="joint3" type="revolute">
      <parent>link2</parent>
      <child>link3</child>
      <axis><xyz>0 1 0</xyz></axis>
    </joint>

  </model>
</sdf>
