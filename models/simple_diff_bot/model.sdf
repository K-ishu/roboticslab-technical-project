<?xml version="1.0"?>
<sdf version="1.9">
  <model name="industrial_black_bot">
    <static>false</static>
    <pose>0 0 0.08 0 0 0</pose>

    <!-- ===========================
         MATERIAL (FULL BLACK)
         =========================== -->
    <!-- NOTE: Gazebo Sim respects material colors in ambient/diffuse -->
    <!-- We'll reuse same black material on all visuals -->

    <!-- ===========================
         BASE CHASSIS
         =========================== -->
    <link name="base_link">
      <inertial>
        <mass>18.0</mass>
        <inertia>
          <ixx>0.55</ixx>
          <iyy>0.55</iyy>
          <izz>0.75</izz>
        </inertia>
      </inertial>

      <!-- Collision: simple, stable box -->
      <collision name="base_collision">
        <pose>0 0 0.06 0 0 0</pose>
        <geometry>
          <box><size>0.52 0.40 0.12</size></box>
        </geometry>
      </collision>

      <!-- Visual: industrial chassis (black) -->
      <visual name="base_visual">
        <pose>0 0 0.06 0 0 0</pose>
        <geometry>
          <box><size>0.52 0.40 0.12</size></box>
        </geometry>
        <material>
          <ambient>0 0 0 1</ambient>
          <diffuse>0 0 0 1</diffuse>
          <specular>0.15 0.15 0.15 1</specular>
        </material>
      </visual>

      <!-- Top deck (black) -->
      <visual name="top_deck">
        <pose>0 0 0.13 0 0 0</pose>
        <geometry>
          <box><size>0.46 0.34 0.03</size></box>
        </geometry>
        <material>
          <ambient>0 0 0 1</ambient>
          <diffuse>0 0 0 1</diffuse>
          <specular>0.12 0.12 0.12 1</specular>
        </material>
      </visual>

      <!-- Front bumper (black) -->
      <visual name="front_bumper">
        <pose>0.25 0 0.06 0 0 0</pose>
        <geometry>
          <box><size>0.04 0.36 0.06</size></box>
        </geometry>
        <material>
          <ambient>0 0 0 1</ambient>
          <diffuse>0 0 0 1</diffuse>
          <specular>0.08 0.08 0.08 1</specular>
        </material>
      </visual>

      <!-- Rear battery pack (black) -->
      <visual name="rear_pack">
        <pose>-0.18 0 0.10 0 0 0</pose>
        <geometry>
          <box><size>0.20 0.18 0.10</size></box>
        </geometry>
        <material>
          <ambient>0 0 0 1</ambient>
          <diffuse>0 0 0 1</diffuse>
          <specular>0.10 0.10 0.10 1</specular>
        </material>
      </visual>
    </link>

    <!-- ===========================
         WHEELS (DIFF DRIVE)
         =========================== -->
    <!-- Wheel notes:
         - Wheel link rotated 90 deg about X => cylinder axis aligns with Y
         - Joint axis set to X => correct rolling
         - wheel_separation must match +/-Y placement *2
    -->

    <link name="left_wheel">
      <pose>0 0.215 0.035 1.5708 0 0</pose>
      <inertial>
        <mass>0.9</mass>
        <inertia>
          <ixx>0.002</ixx>
          <iyy>0.002</iyy>
          <izz>0.002</izz>
        </inertia>
      </inertial>

      <collision name="collision">
        <geometry>
          <cylinder><radius>0.035</radius><length>0.03</length></cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>12</mu><mu2>12</mu2>
            </ode>
          </friction>
        </surface>
      </collision>

      <visual name="visual">
        <geometry>
          <cylinder><radius>0.035</radius><length>0.03</length></cylinder>
        </geometry>
        <material>
          <ambient>0 0 0 1</ambient>
          <diffuse>0 0 0 1</diffuse>
          <specular>0.05 0.05 0.05 1</specular>
        </material>
      </visual>
    </link>

    <link name="right_wheel">
      <pose>0 -0.215 0.035 1.5708 0 0</pose>
      <inertial>
        <mass>0.9</mass>
        <inertia>
          <ixx>0.002</ixx>
          <iyy>0.002</iyy>
          <izz>0.002</izz>
        </inertia>
      </inertial>

      <collision name="collision">
        <geometry>
          <cylinder><radius>0.035</radius><length>0.03</length></cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>12</mu><mu2>12</mu2>
            </ode>
          </friction>
        </surface>
      </collision>

      <visual name="visual">
        <geometry>
          <cylinder><radius>0.035</radius><length>0.03</length></cylinder>
        </geometry>
        <material>
          <ambient>0 0 0 1</ambient>
          <diffuse>0 0 0 1</diffuse>
          <specular>0.05 0.05 0.05 1</specular>
        </material>
      </visual>
    </link>

    <!-- ===========================
         CASTER (REAR)
         =========================== -->
    <link name="caster">
      <pose>-0.22 0 0.02 0 0 0</pose>
      <collision name="collision">
        <geometry><sphere><radius>0.02</radius></sphere></geometry>
        <surface>
          <friction>
            <ode>
              <mu>2</mu><mu2>2</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
      <visual name="visual">
        <geometry><sphere><radius>0.02</radius></sphere></geometry>
        <material>
          <ambient>0 0 0 1</ambient>
          <diffuse>0 0 0 1</diffuse>
        </material>
      </visual>
    </link>

    <!-- ===========================
         SENSOR MAST + CAMERA (BLACK)
         =========================== -->
    <link name="mast_link">
      <pose>0.12 0 0.18 0 0 0</pose>

      <collision name="mast_collision">
        <geometry>
          <cylinder><radius>0.015</radius><length>0.22</length></cylinder>
        </geometry>
      </collision>

      <visual name="mast_visual">
        <geometry>
          <cylinder><radius>0.015</radius><length>0.22</length></cylinder>
        </geometry>
        <material>
          <ambient>0 0 0 1</ambient>
          <diffuse>0 0 0 1</diffuse>
          <specular>0.08 0.08 0.08 1</specular>
        </material>
      </visual>
    </link>

    <link name="camera_link">
      <pose>0.22 0 0.22 0 0 0</pose>

      <visual name="camera_box">
        <geometry>
          <box><size>0.05 0.05 0.04</size></box>
        </geometry>
        <material>
          <ambient>0 0 0 1</ambient>
          <diffuse>0 0 0 1</diffuse>
          <specular>0.12 0.12 0.12 1</specular>
        </material>
      </visual>

      <sensor name="front_camera" type="camera">
        <pose>0.03 0 0 0 0 0</pose>
        <camera>
          <horizontal_fov>1.047</horizontal_fov>
          <image>
            <width>640</width>
            <height>480</height>
          </image>
          <clip>
            <near>0.05</near>
            <far>30</far>
          </clip>
        </camera>
      </sensor>
    </link>

    <!-- ===========================
         JOINTS
         =========================== -->
    <joint name="left_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>left_wheel</child>
      <axis>
        <!-- IMPORTANT: correct rolling axis -->
        <xyz>1 0 0</xyz>
      </axis>
    </joint>

    <joint name="right_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>right_wheel</child>
      <axis>
        <!-- IMPORTANT: correct rolling axis -->
        <xyz>1 0 0</xyz>
      </axis>
    </joint>

    <joint name="caster_joint" type="ball">
      <parent>base_link</parent>
      <child>caster</child>
    </joint>

    <joint name="mast_joint" type="fixed">
      <parent>base_link</parent>
      <child>mast_link</child>
    </joint>

    <joint name="camera_joint" type="fixed">
      <parent>mast_link</parent>
      <child>camera_link</child>
    </joint>

    <!-- ===========================
         DIFF DRIVE PLUGIN
         =========================== -->
    <plugin filename="gz-sim-diff-drive-system"
            name="gz::sim::systems::DiffDrive">
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>

      <!-- matches 0.215 * 2 -->
      <wheel_separation>0.43</wheel_separation>
      <wheel_radius>0.035</wheel_radius>

      <topic>/cmd_vel</topic>
      <frame_id>odom</frame_id>
      <child_frame_id>base_link</child_frame_id>

      <max_linear_velocity>0.7</max_linear_velocity>
      <max_angular_velocity>2.0</max_angular_velocity>
      <update_rate>50</update_rate>
    </plugin>

  </model>
</sdf>

